<div class="main users-edit">
  <div class="container">
    <div class="form-heading">ユーザー情報の編集</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
       <%= form_for @user,:url => {:action => 'update'}, :html => {:multipart => true} do |f| %>

 
            <div class="form-group">
              <%= f.label :name, '名前' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
           
            <div class="form-group">
              <%= f.label :email, 'メールアドレス' %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :profile, "プロフィール"%>
              <%= f.text_area :profile, class: "form-control" %>
            </div>
           
              <%= f.file_field :image_name %>
              <%= f.submit '編集', class: 'btn btn-primary' %>
          <% end %>
  
      </div>
    </div>
  </div>
</div>
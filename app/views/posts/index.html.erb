<div class="main posts-index">
  <div class="container2">
    <div class="post-content">
    <% @posts.each do |post| %>
      <div class="posts-index-item1">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
           <%= link_to(post.user.name,"/users/#{post.user.id}") %>
          </div>
          <a><span class="itioshi">いちおしアイテム！</span></a><br>

          <%= link_to(post.object, "/posts/#{post.id}") %>
          <%= image_tag post.image.to_s %>   
        </div>
        
      </div>
    <% end %>
     </div>
      <div class="rank-top">
       <h2>いちおしランキング</h2>
      <% @all_ranks.each.with_index(1) do |post, i| %>
        <div class="rank">
         <div class="rank-user">
           <%= "第#{i}位" %>
           <%= link_to(post.user.name,"/users/#{post.user.id}") %>
         </div>
          <div class="rank-name">
            <%= link_to(post.object, "/posts/#{post.id}") %>
            <%= @likes_count %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

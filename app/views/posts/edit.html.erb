<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_with model: @post, local: true do |f| %>
    <div class="form">
     <div class="form-body">
     	<% @post.errors.full_messages.each do |message| %>
     	<div class="form-error">
     		<%= message %>
     	</div>
     	<% end %>
     	        <%= f.label "わたしのいちおし" %><br>
                <%= f.text_field :object,:placeholder => "商品の名前" %>
                <%= f.label "いちおしポイント" %><br>
                <%= f.text_area :content %>
                <%= f.label "画像をアップロード" %><br>
                <%= f.file_field :image %>
                <%= f.submit "投稿" %>
     </div>
    </div>	
    <% end %>
  </div>
</div>